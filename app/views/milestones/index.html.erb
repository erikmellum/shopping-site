<h1>Listing milestones</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @milestones.each do |milestone| %>
      <tr>
        <td><%= milestone.date %></td>
        <td><%= milestone.description %></td>
        <td><%= milestone.name %></td>
        <td><%= link_to (raw("<i class='fa fa-search'>Show</i>")), milestone %></td>
        <td><%= link_to (raw("<i class='fa fa-edit'>Edit</i>")), edit_milestone_path(milestone) %></td>
        <td><%= link_to (raw("<i class='fa fa-remove'>Remove</i>")), milestone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (raw("<button class='btn btn-default'>New Milestone</button>")), new_member_milestone_path %>
<%= link_to (raw("<button class='btn btn-default'>Back</button>")), member_path(params[:member_id]) %>
